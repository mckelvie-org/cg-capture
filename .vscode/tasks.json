{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "g++.exe build active file",
        "command": "/usr/bin/g++",
        "args": [
          "-static-libstdc++",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "shell",
        "label": "g++.exe build app (debug)",
        "command": "/usr/bin/g++",
        "args": [
          "-static-libstdc++",
          "-g",
          "${workspaceFolder}/main.cpp",
          "-o",
          "${workspaceFolder}/build/Debug/outDebug"
        ],
        "options": {
          "cwd": "${workspaceFolder}"
        },
        "problemMatcher": ["$gcc"],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      }
    ]
  }
